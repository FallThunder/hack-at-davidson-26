{
  "manifest_version": 2,
  "name": "Smart Page Analyzer",
  "version": "1.0.0",
  "description": "Intelligently detects news articles and analyzes site popularity for Firefox",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "alarms"
  ],
  
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Smart Page Analyzer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "scripts": ["background/background-firefox.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-analyzer.js", "content/content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": ["icons/*"],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "extension-starter@example.com",
      "strict_min_version": "91.0"
    }
  }
}