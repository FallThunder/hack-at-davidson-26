{
  "manifest_version": 3,
  "name": "Evident",
  "version": "1.0.0",
  "description": "AI-powered fact-checking and bias analysis for news articles. Detect emotional manipulation, political bias, and verify claims.",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "alarms"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Evident - Fact Check & Bias Analysis",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-analyzer.js", "content/content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}